<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

	<TextView
		android:id="@+id/tvAvatar"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="A"
		android:textColor="@android:color/white"
		android:textStyle="bold"
		android:textSize="22sp"
		android:background="@drawable/bg_avatar_circle"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent" />

	<ImageView
		android:id="@+id/ivLabel"
		android:layout_width="16dp"
		android:layout_height="16dp"
		android:layout_marginStart="12dp"
		android:layout_marginTop="2dp"
		app:tint="@color/gmail_yellow"
		android:src="@drawable/ic_label_24"
		app:layout_constraintStart_toEndOf="@id/tvAvatar"
		app:layout_constraintTop_toTopOf="@id/tvAvatar"/>

	<TextView
		android:id="@+id/tvSender"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Edurila.com"
		tools:text="Edurila.com"
		android:textStyle="bold"
		android:textColor="#212121"
		android:textSize="16sp"
		app:layout_constraintStart_toEndOf="@id/ivLabel"
		app:layout_constraintTop_toTopOf="@id/tvAvatar"
		app:layout_constraintEnd_toStartOf="@id/tvTime"
		android:layout_marginStart="8dp"/>

	<TextView
		android:id="@+id/tvTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="12:34 PM"
		android:textSize="12sp"
		android:textColor="#9E9E9E"
		app:layout_constraintTop_toTopOf="@id/tvSender"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/tvTitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="\$19 Only (First 10 spots) - Bestselling..."
		tools:text="\$19 Only (First 10 spots) - Bestselling..."
		android:textStyle="bold"
		android:textColor="#757575"
		android:textSize="14sp"
		app:layout_constraintStart_toStartOf="@id/tvSender"
		app:layout_constraintEnd_toStartOf="@id/ivStar"
		app:layout_constraintTop_toBottomOf="@id/tvSender"
		android:layout_marginTop="2dp"/>

	<TextView
		android:id="@+id/tvContent"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Are you looking to Learn Web Designin..."
		tools:text="Are you looking to Learn Web Designin..."
		android:textSize="13sp"
		android:textColor="#9E9E9E"
		android:maxLines="1"
		app:layout_constraintStart_toStartOf="@id/tvSender"
		app:layout_constraintEnd_toStartOf="@id/ivStar"
		app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

	<ImageView
		android:id="@+id/ivStar"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:src="@drawable/ic_star_border_24"
		app:tint="#B0B0B0"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvTime"/>

	<View
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/gmail_divider"
		app:layout_constraintStart_toStartOf="@id/tvSender"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvContent"
		android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>